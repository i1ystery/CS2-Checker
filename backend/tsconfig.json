{
  /**
   * TypeScript konfigurace pro CS2 Checker Backend
   * 
   * Tato konfigurace je optimalizována pro Node.js backend aplikaci
   * s Express.js frameworkem.
   */
  "compilerOptions": {
    // Struktura souborů - definuje odkud se čte zdrojový kód a kam se kompiluje
    "rootDir": "./src",
    "outDir": "./dist",

    // Nastavení prostředí pro Node.js
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    // Výstupní soubory - generování source maps pro debugování
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Striktní typová kontrola pro lepší kvalitu kódu
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
